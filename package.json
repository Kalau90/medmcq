{
  "name": "medmcq",
  "version": "0.3.0",
  "description": "En webapp til visning af MCQ-opgaver fra kandidaten i medicin p√• AU",
  "main": "server/server.js",
  "engines": {
    "node": "10.16.0",
    "npm": "6.9.0"
  },
  "repository": "https://github.com/Morsby/medmcq",
  "scripts": {
    "start": "ts-node -P server/tsconfig.json -r tsconfig-paths/register server/build/server.js",
    "server": "cd server && npm run dev",
    "client": "npm run genversion && cd client && npm start",
    "dev": "npm-run-all --parallel server client",
    "install-all": "npm install && cd server && npm install && cd .. && cd client && npm install",
    "update-all": "npm update && cd server && npm update && cd ../client && npm update",
    "build": "npm run genversion && npm-run-all --sequential build:*",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "genversion": "genversion -e version.js -s && mv version.js client/src/",
    "lint": "eslint . --fix --ext .ts,.tsx,.js,.jsx,.json",
    "format": "npm-run-all --parallel format:*",
    "format:json": "prettier --list-different  --write \"**/*.json\"",
    "format:styles": "prettier --list-different --write \"**/*.{css,scss}\"",
    "validate": "npm-run-all --sequential lint format test",
    "test": "npm-run-all --parallel test:*",
    "test:server": "cd server && npm run test",
    "test:client": "cd client && npm run test",
    "heroku-prebuild": "npm run install-all"
  },
  "author": "Morsby",
  "license": "MIT",
  "dependencies": {
    "genversion": "^2.2.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-session": "^2.0.37",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.137",
    "@types/react": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-eslint": "10.0.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^3.0.4",
    "prettier": "^1.18.2",
    "tslint": "^5.19.0",
    "typescript-eslint-parser": "^22.0.0"
  }
}
