{
  "name": "medmcq",
  "version": "0.3.0",
  "description": "En webapp til visning af MCQ-opgaver fra kandidaten i medicin p√• AU",
  "main": "server/server.js",
  "engines": {
    "node": "10.16.0",
    "npm": "6.9.0"
  },
  "repository": "https://github.com/Morsby/medmcq",
  "scripts": {
    "server": "cd server && npm run dev",
    "client": "npm run genversion && cd client && npm start",
    "dev": "npm-run-all --parallel server client",
    "update": "git pull && cd server && npm install && cd ../client && npm install",
    "build": "npm run update && npm run genversion && cd client && npm run build",
    "genversion": "genversion -e version.js && mv version.js client/src/",
    "lint": "eslint . --fix --ext .js,.jsx,.json",
    "format": "npm-run-all --parallel format:*",
    "format:json": "prettier --list-different  --write \"**/*.json\"",
    "format:styles": "prettier --list-different --write \"**/*.{css,scss}\"",
    "validate": "npm-run-all --sequential lint format test",
    "test": "npm-run-all --parallel test:*",
    "test:server": "cd server && npm run test",
    "test:client": "cd client && npm run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "author": "Morsby",
  "license": "MIT",
  "devDependencies": {
    "@types/cookie-session": "^2.0.37",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "genversion": "^2.1.1",
    "husky": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.1",
    "tslint": "^5.18.0"
  }
}
