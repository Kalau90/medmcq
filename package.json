{
  "name": "medmcq",
  "version": "0.3.0",
  "description": "En webapp til visning af MCQ-opgaver fra kandidaten i medicin pÃ¥ AU",
  "main": "server/server.js",
  "engines": {
    "node": "10.16.0",
    "npm": "6.9.0"
  },
  "repository": "https://github.com/Morsby/medmcq",
  "scripts": {
    "server": "cd server && npm run dev",
    "client": "npm run genversion && cd client && npm start",
    "dev": "npm-run-all --parallel server client",
    "update": "git pull && cd server && npm install && cd ../client && npm install",
    "build": "npm run update && npm run genversion && cd client && npm run build",
    "genversion": "genversion -e version.js && mv version.js client/src/",
    "lint:js": "semistandard --fix --verbose | snazzy",
    "lint:json": "prettier --write --list-different '**/*.json'",
    "lint": "npm-run-all --parallel lint:*",
    "validate": "npm-run-all --sequential lint test",
    "test": "npm-run-all --parallel test:server",
    "test:server": "cd server && npm run test",
    "test:client": "cd client && npm run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate"
    }
  },
  "semistandard": {
    "parser": "babel-eslint",
    "env": [
      "jest"
    ],
    "ignore": [
      "**/node_modules/",
      "**/coverage/**",
      "**/graveyard/",
      "client/build/",
      "client/src/semantic/",
      "client/src/serviceWorker.js"
    ]
  },
  "author": "Morsby",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "genversion": "^2.1.1",
    "husky": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "semistandard": "github:morsby/semistandard",
    "snazzy": "^8.0.0"
  }
}